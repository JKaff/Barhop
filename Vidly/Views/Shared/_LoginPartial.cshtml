@using System.Diagnostics
@using System.Web.UI.HtmlControls
@using Microsoft.Ajax.Utilities
@using Microsoft.AspNet.Identity
<style>
    span:hover {
        color: #336393 !important;
        font-size: 17px;
    }
    span {
        color: #03182d ;
        font-size: 17px;
    }
</style>
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right" style="padding-top: 2px">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="padding-top: 2px; padding-bottom: 3px; font-size: 15px;">
        <!--<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</li>-->
        @{
            string url = HttpContext.Current.Request.Url.AbsolutePath;
            if (url == "/" || url == "/Home" || url =="/Home/Index")
            {
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span style="color: #336393; font-weight: 500">Home</span>
                    </a>
                </li>

            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span style="color: #03182d ">Home</span>
                    </a>
                </li>
            }
            if (url == "/Home/About")
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span style="color: #336393; font-weight: 500">About</span>
                    </a>
                </li>

            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span style="color: #03182d ">About</span>
                    </a>
                </li>
            }
            <li class="nav-item" style="padding-right: 60px;">
                <a class="nav-link" href="/Admin/Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span >Admin</span>
                </a>
            </li>
            if (url == "/Account/Login")
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span style="color: #ffffff; font-weight: 500">Log in</span>
                    </a>
                </li>

            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span style="color: #03182d ">Log in</span>
                    </a>
                </li>
            }
        }

    </ul>
   
        }
